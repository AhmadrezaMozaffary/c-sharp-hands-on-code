@{
    ViewData["Title"] = "Home Page";
}

<!-- Icons Grid-->
<section class="features-icons bg-light text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="bi-window m-auto text-primary"></i>
                    </div>
                    <h3>Find Events</h3>
                    <p class="lead mb-0">Search for events you mostly like</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="bi-layers m-auto text-primary"></i>
                    </div>
                    <h3>Join Events</h3>
                    <p class="lead mb-0">Check Time lines and info , join easily </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="bi-terminal m-auto text-primary"></i>
                    </div>
                    <h3>Much More...</h3>
                    <p class="lead mb-0">Create events, manage your events </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Image Showcases-->
